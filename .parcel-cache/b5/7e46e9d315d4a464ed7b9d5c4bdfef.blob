  }
  .plants__content .plant--favorite:after {
    content: "✨ Staff favorite";
    display: flex;
    align-items: center;
    position: absolute;
    top: 32px;
    left: 0;
    right: auto;
    bottom: auto;
    height: 40px;
    width: 188px;
    font-size: 14px;
    padding-left: 20px;
    font-weight: 700;
    border-radius: 0 24px 24px 0;
    background-color: #75BC97;
    color: #FFF;
  }
  .plants__content .plant--favorite .plant__content {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 352px 30px 30px;
    grid-row-gap: 16px;
    padding: 20px;
  }
  .plants__content .plant--favorite .plant__image {
    grid-column: 1/span 4;
  }
  .plants__content .plant--favorite .plant__name {
    grid-column: 1/span 2;
    grid-row: 2/span 2;
    font-size: 35px;
    line-height: 37px;
  }
  .plants__content .plant--favorite .plant__price {
    grid-column: 3/span 2;
    grid-row: 2;
    font-size: 24px;
    line-height: 28px;
    justify-content: flex-end;
  }
  .plants__content .plant--favorite .plant__icons img {
    height: 25px;
  }
  .plants__content .plant--favorite .plant__icons img + img {
    margin-left: 16px;
  }
  .plants__footer a {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    width: 100%;
    border-radius: 24px;
    border: 1px solid #15573F;
    font-size: 16px;
    color: #196146;
