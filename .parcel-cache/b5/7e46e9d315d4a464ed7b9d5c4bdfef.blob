    background-color: transparent;
  }
  .plants__footer a span {
    display: inline-block;
    color: #196146;
  }
  .plants__footer a span + span {
    margin-left: 16px;
  }
  .plants__footer a span img {
    margin-top: 8px;
    height: 24px;
  }

  .no-plants {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-auto-rows: 216px;
    grid-column-gap: 112px;
    padding: 72px 20% 72px 20%;
    background-color: #F2F2F2;
  }
  .no-plants__content h2,
.no-plants__content p {
    color: #A9A9A9;
  }
  .no-plants__content h2 {
    font-size: 45px;
    line-height: 54.86px;
    margin-bottom: 16px;
  }
  .no-plants__content p {
    width: 220px;
    line-height: 27px;
  }
  .no-plants__illustration {
    margin: auto 0 auto 72px;
    height: 204px;
  }
}