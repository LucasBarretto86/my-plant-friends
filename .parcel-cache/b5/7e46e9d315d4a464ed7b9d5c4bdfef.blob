@charset "UTF-8";
*,
*:after,
*:before {
  font-family: "Montserrat", sans-serif !important;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  text-decoration: none;
  font-size: 10px;
}
html,
body {
  box-sizing: inherit;
  width: 100%;
  height: 100%;
}
h1,
h2 strong {
  font-weight: 700;
}
p,
span,
strong,
select {
  font-size: 14px;
  line-height: 22px;
  color: #848484;
}
:root {
  font-size: 10px;
}
html {
  scroll-behavior: smooth;
}
.hidden {
  display: none !important;
}
@media (max-width: 800px) {
  h1 {
    font-size: 4rem;
    line-height: 4.87rem;
  }

  h2 {
    font-size: 4rem;
    line-height: 4.9rem;
  }

  .hero {
    position: relative;
    padding: 4em 3.2em;
    height: 100vh;
    max-height: 660px;
    background-color: #75BC97;
    background-image: url("1e75522bfefd28411090f9881c760aea");
    background-size: auto 35%;
    background-position: bottom 3% center;
    background-repeat: no-repeat;
    z-index: 0;
  }
  .hero:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: auto;
    height: 75%;
    background-image: url("2afb74f8a8a2ca316543df6561466d4f");
    background-size: 110% auto;
    background-position: bottom center;
    background-repeat: no-repeat;
    z-index: 1;
  }
  .hero__content {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    z-index: 2;
  }
  .hero__logo {
    width: 21.2rem;
    margin-bottom: 0.48em;
  }
  .hero__message {
    color: #FFF;
    margin-bottom: 0.24em;
  }
  .hero__arrow {
    height: 46px;
    width: 36px;
  }

  .selection-bar {
    background-color: #FFF;
    padding: 24px 24px 48px 48px;
    scroll-snap-type: y mandatory;
  }
  .selection-bar__form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .selection-bar .selector {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 75px auto auto;
    grid-gap: 16px;
    width: 100%;
    scroll-snap-align: center;
  }
  .selection-bar .selector__illustration {
    margin-top: auto;
  }
  .selection-bar .selector__illustration--sun {
    width: 75px;
    height: 75px;
  }
  .selection-bar .selector__illustration--wateringcan {
    height: 75px;
    width: 104px;
    transform: matrix(-1, 0, 0, 1, 0, 0);
  }
  .selection-bar .selector__illustration--pets {
    width: 75px;
    height: 62px;
  }
  .selection-bar .selector__description {
    padding-right: 24px;
  }
  .selection-bar .selector__select {
    position: relative;
    width: 100%;
    height: 40px;
    border: 1px solid #A8A8A8;
    border-radius: 48px;
    background-color: transparent;
  }
  .selection-bar .selector__select:focus-within {
    background-color: #F8F8F8;
  }
  .selection-bar .selector__select:after {
    content: "";
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
    left: auto;
    right: 16px;
    bottom: 0;
    width: 20px;
    height: 100%;
    pointer-events: none;
    background-image: url("b1c34ee204c8ad7423c43e48e5a73345");
    background-size: contain;
    background-position: top 16px center;
    background-repeat: no-repeat;
  }
  .selection-bar .selector__select select {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    appearance: none;
    -moz-appearance: none;
    background-color: transparent;
    width: 100%;
    height: 40px;
    padding: 0 32px;
    border-width: 0;
    color: #A8A8A8;
    outline: none;
  }
  .selection-bar .selector__select select option {
    padding: 0;
    margin: 0 -24px;
  }
  .selection-bar .selector + .selector {
    margin-top: 56px;
  }

  .plants {
    display: flex;
    flex-direction: column;
    background-color: #F2F2F2;
    width: 100%;
    padding: 32px 0;
    overflow: hidden;
  }
  .plants h2 {
    color: #0C261C;
  }
  .plants__header, .plants__content, .plants__footer {
    margin-bottom: 20px;
  }
  .plants__header {
    padding: 0 24px 0 48px;
  }
  .plants__illustration {
    width: 158px;
    margin-bottom: 16px;
  }
  .plants__content {
    display: grid;
    grid-auto-flow: column;
    grid-column-gap: 20px;
    margin-bottom: 32px;
    overflow-x: scroll;
    padding: 0 24px;
    scroll-snap-type: x mandatory;
  }
  .plants__content .plant {
    position: relative;
    padding: 18px;
    width: 260px;
    border-radius: 5px;
    background-color: #FFF;
    box-shadow: 8px 8px 16px 8px rgba(0, 0, 0, 0.02);
    scroll-snap-align: center;
  }
  .plants__content .plant .plant {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 224px 28px 28px;
    width: 100%;
    height: 100%;
    padding-top: 24px;
  }
  .plants__content .plant .plant__name, .plants__content .plant .plant__price {
    font-size: 16px;
    line-height: 28px;
    font-weight: 700;
    color: #1E6B4E;
    display: flex;
    align-items: center;
  }
  .plants__content .plant .plant__image {
    grid-column: 1/span 4;
    width: 100%;
    height: 224px;
    min-height: 100%;
    margin: auto;
    background-size: auto 100% !important;
    overflow: hidden;
  }
  .plants__content .plant .plant__name {
    grid-column: 1/span 4;
    grid-row: 2;
  }
  .plants__content .plant .plant__price {
    grid-column: 1/span 2;
    grid-row: 3;
  }
  .plants__content .plant .plant__icons {
    grid-column: 3/span 2;
    grid-row: 3;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }
  .plants__content .plant .plant__icons img {
    height: 16px;
  }
  .plants__content .plant .plant__icons img + img {
    margin-left: 8px;
  }
  .plants__content .plant--favorite:after {
    content: "✨ Staff favorite";
    display: flex;
    align-items: center;
    position: absolute;
    top: 20px;
    left: 0;
    right: auto;
    bottom: auto;
    height: 40px;
    width: 50%;
    padding-left: 8px;
    font-size: 12.8px;
    font-weight: 700;
    border-radius: 0 24px 24px 0;
    background-color: #75BC97;
    color: #FFF;
  }
  .plants__footer {
    padding: 0 24px;
  }
  .plants__footer a {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    width: 100%;
    border-radius: 24px;
    border: 1px solid #15573F;
    font-size: 16px;
    color: #196146;
    font-weight: 300;
    line-height: 20px;
    text-decoration: none;
    background-color: transparent;
  }
  .plants__footer a span {
    display: inline-block;
    color: #196146;
  }
  .plants__footer a span + span {
    margin-left: 16px;
  }
  .plants__footer a span img {
    margin-top: 8px;
    height: 24px;
  }

  .no-plants {
    display: flex;
    flex-direction: column;
    padding: 48px 32px;
    background-color: #F2F2F2;
  }
  .no-plants__content h2,
.no-plants__content p {
    color: #A9A9A9;
  }
  .no-plants__content h2 {
    font-size: 45px;
    line-height: 54.86px;
    margin-bottom: 16px;
  }
  .no-plants__content p {
    line-height: 27px;
    padding-right: 48px;
  }
  .no-plants__illustration {
    margin: 32px auto auto;
    height: 168px;
  }
}
@media (min-width: 800px) {
