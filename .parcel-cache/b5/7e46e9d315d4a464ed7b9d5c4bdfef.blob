    color: #A8A8A8;
    outline: none;
  }
  .selection-bar .selector__select select ~ .selector__input--actived {
    display: none;
  }
  .selection-bar .selector__select select ~ .selector__input--deactived {
    display: flex;
  }
  .selection-bar .selector__select select:focus-within:hover ~ .selector__input--actived {
