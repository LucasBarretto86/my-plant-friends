  }
  .plants__content .plant__name, .plants__content .plant__price {
    font-size: 16px;
    line-height: 28px;
    font-weight: 700;
    color: #1E6B4E;
    display: flex;
    align-items: center;
  }
  .plants__content .plant__image {
    grid-column: 1/span 4;
    width: 100%;
    height: 120px;
    min-height: 100%;
    overflow: hidden;
  }
  .plants__content .plant__name {
    grid-column: 1/span 4;
