    box-shadow: 8px 8px 16px 8px rgba(0, 0, 0, 0.02);
  }
  .plants__content .plant__content {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 1fr auto auto;
    width: 100%;
