  }
  .selection-bar .selector__select:after {
    content: "";
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
    left: auto;
    right: 16px;
    bottom: 0;
    width: 20px;
    height: 100%;
